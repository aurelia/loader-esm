    "rimraf": "^2.6.2",
    "rollup": "^0.66.6",
    "rollup-plugin-typescript2": "^0.17.1",
    "tslib": "^1.9.3",
    "typescript": "^3.1.3",
    "yargs": "^12.0.2"
  }
